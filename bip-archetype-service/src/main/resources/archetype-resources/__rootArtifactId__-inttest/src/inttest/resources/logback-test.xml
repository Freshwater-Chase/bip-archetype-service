#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %magenta([%thread]) %highlight(%-5level) %logger{36}.%M - %msg%n</pattern>
        </encoder>
    </appender>
    
    <logger name="gov.va.bip.${artifactNameLowerCase}.service" level="${symbol_dollar}{LOG_LEVEL_BIP_${artifactNameUpperCase}_TEST:-WARN}"/>
    <logger name="gov.va.bip.framework.test" level="${symbol_dollar}{LOG_LEVEL_BIP_FRAMEWORK_TEST:-WARN}"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>